---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ResearchSlideshow from '~/components/widgets/ResearchSlideshow.astro';
import NewsTicker from '~/components/widgets/NewsTicker.astro';
import FullScreenSlider from '~/components/widgets/FullScreenSlider.astro';

const metadata = {
  title: 'Fluid Innovation Lab - Advancing Research in Fluid Dynamics',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Full Screen Slider ******************* -->
  <FullScreenSlider
    title="Fluid Innovation Lab"
    subtitle="Advancing the Frontiers of Fluid Dynamics Research"
    tagline="Welcome"
  />

  <!-- Features Widget ************** -->
  <Features
    id="research"
    title="Research Focus"
    subtitle="Our lab specializes in advanced fluid dynamics research with applications in biomedical engineering and aerospace."
    items={[
      {
        title: 'Biomedical Fluid Dynamics',
        description: 'Studying blood flow patterns and developing improved medical devices.',
        icon: 'tabler:heart',
      },
      {
        title: 'Computational Fluid Dynamics',
        description: 'Using advanced numerical methods to simulate complex fluid flows.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Experimental Fluid Mechanics',
        description: 'Conducting laboratory experiments to validate theoretical models.',
        icon: 'tabler:test-pipe',
      },
    ]}
  />

  <!-- Current Projects Widget ************** -->
  <Features2
    title="Current Projects"
    subtitle="Explore our ongoing research initiatives and their impact on healthcare and engineering."
    items={[
      {
        title: 'LVAD Research',
        description: 'Optimizing Left Ventricular Assist Device design to minimize blood damage and improve patient outcomes.',
        image: '/images/projects/1.png',
        callToAction: {
          text: 'Learn More',
          href: '/research/projects/lvad-research',
        },
      },
      {
        title: 'Fluid Measurement',
        description: 'Studying flow patterns past transcatheter aortic valves using time-resolved 3D particle tracking.',
        image: '/images/projects/4.png',
        callToAction: {
          text: 'Learn More',
          href: '/research/projects/fluid-measurement',
        },
      },
      {
        title: 'Turbomachinery',
        description: 'Understanding extreme events in turbomachines through advanced imaging and flow control techniques.',
        image: '/images/projects/7.png',
        callToAction: {
          text: 'Learn More',
          href: '/research/projects/turbomachinery-research',
        },
      },
    ]}
  />

  <!-- News Ticker Widget *************** -->
  <NewsTicker
    id="news-ticker"
    tagline="Latest Updates"
    title="Lab News Feed"
    subtitle="Stay informed about our latest research, publications, and achievements"
  />

  <!-- Call to Action Widget ******** -->
  <CallToAction
    title="Join Our Research Team"
    subtitle="We're always looking for talented researchers, students, and collaborators to join our lab."
    image="/images/team/group-photo.jpg"
    imageAlt="Fluid Innovation Lab Research Team"
    actions={[
      {
        text: 'Apply Now',
        href: '/contact',
        variant: 'primary',
        icon: 'tabler:user-plus',
      },
      {
        text: 'Learn More',
        href: '/team/current',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>
