---
#import Layout from '~/layouts/PageLayout.astro';
#import Header from '~/components/widgets/Header.astro';
#import Footer from '~/components/widgets/Footer.astro';
#import { headerData, footerData } from '~/navigation';

const metadata = {
  title: 'Faculty Members',
  description: 'Meet our distinguished faculty members leading research in fluid dynamics and engineering.',
};

const faculty = [
  {
    name: 'Dr. Sarah Smith',
    title: 'Professor & Lab Director',
    image: 'https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1976&q=80',
    bio: 'Leading expert in computational fluid dynamics with over 20 years of research experience.',
    email: 'sarah.smith@university.edu',
    research: ['Computational Fluid Dynamics', 'Numerical Methods', 'Flow Optimization'],
  },
  {
    name: 'Dr. James Johnson',
    title: 'Associate Professor',
    image: 'https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    bio: 'Specializing in experimental fluid mechanics and advanced measurement techniques.',
    email: 'james.johnson@university.edu',
    research: ['Experimental Fluid Mechanics', 'Flow Visualization', 'Particle Image Velocimetry'],
  },
  {
    name: 'Dr. Emily Williams',
    title: 'Assistant Professor',
    image: 'https://images.unsplash.com/photo-1580489944761-15a19d654956?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1961&q=80',
    bio: 'Expert in microfluidics and lab-on-a-chip technologies for healthcare applications.',
    email: 'emily.williams@university.edu',
    research: ['Microfluidics', 'Lab-on-a-Chip', 'Biomedical Engineering'],
  },
];
---

<Layout metadata={metadata}>
  <Header {...headerData} />
  <main>
    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          Faculty Members
        </h1>
        <p class="text-xl text-gray-600 dark:text-slate-400">
          Meet our distinguished faculty members leading research in fluid dynamics and engineering.
        </p>
      </div>
      <div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-3 items-center">
        {faculty.map((member) => (
          <div class="flex flex-col h-full p-6 bg-white dark:bg-slate-900 shadow-lg rounded-lg">
            <div class="relative h-64 mb-4">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-full object-cover rounded-lg"
              />
            </div>
            <h3 class="text-xl font-bold leading-snug mb-2 font-heading">{member.name}</h3>
            <p class="text-blue-600 dark:text-blue-400 mb-2">{member.title}</p>
            <p class="text-gray-600 dark:text-slate-400 mb-4">{member.bio}</p>
            <div class="mt-auto">
              <h4 class="text-sm font-semibold mb-2">Research Areas:</h4>
              <ul class="text-sm text-gray-600 dark:text-slate-400 mb-4">
                {member.research.map((area) => (
                  <li class="mb-1">â€¢ {area}</li>
                ))}
              </ul>
              <a
                href={`mailto:${member.email}`}
                class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
              >
                {member.email}
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer {...footerData} />
</Layout> 