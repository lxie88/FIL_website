---
const metadata = {
  title: 'Current Members',
  description: 'Meet our current team members who are actively contributing to our research.',
};

const currentMembers = [
  {
    name: 'Dr. Sarah Smith',
    title: 'Professor & Lab Director',
    image: 'https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1976&q=80',
    bio: 'Leading expert in computational fluid dynamics with over 20 years of research experience.',
    email: 'sarah.smith@university.edu',
    research: ['Computational Fluid Dynamics', 'Numerical Methods', 'Flow Optimization'],
  },
  // Add more current members here
];
---

<html>
  <head>
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
  </head>
  <body>
    <header>
      <!-- Add your header HTML here -->
    </header>
    <main>
      <section>
        <h1>Current Members</h1>
        <p>Meet our current team members who are actively contributing to our research.</p>
        <div>
          {currentMembers.map((member) => (
            <div>
              <img src={member.image} alt={member.name} />
              <h3>{member.name}</h3>
              <p>{member.title}</p>
              <p>{member.bio}</p>
              <ul>
                {member.research.map((area) => (
                  <li>{area}</li>
                ))}
              </ul>
              <a href={`mailto:${member.email}`}>{member.email}</a>
            </div>
          ))}
        </div>
      </section>
    </main>
    <footer>
      <!-- Add your footer HTML here -->
    </footer>
  </body>
</html> 