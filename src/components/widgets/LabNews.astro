---
import { Icon } from 'astro-icon/components';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';
import Button from '../ui/Button.astro';

export interface Props extends Widget {
  title?: string;
  subtitle?: string;
  tagline?: string;
  count?: number;
}

const {
  title = 'Latest Lab News',
  subtitle = 'Stay updated with our latest research, publications, and achievements',
  tagline = 'News & Updates',
  count = 3,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Sample news data - in a real application, this would come from a CMS or database
const newsItems = [
  {
    title: 'Research Grant Awarded by NASA',
    excerpt: 'We are excited to announce our proposal, "Nexus of Neutronics-Thermal Fluid Analysis for Optimizing Centrifugal Nuclear Thermal Propulsion," has been selected for funding!',
    date: 'July 28, 2024',
    category: 'Grant',
    categoryColor: 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200',
    link: '/news/nasa-grant-2024',
  },
  {
    title: 'Publication in Annals of Biomedical Engineering: 3D Particle Tracking Study',
    excerpt: 'Our paper titled "An In-Vitro Study of the Flow past a Transcatheter Aortic Valve Using Time-Resolved 3D Particle Tracking" has been accepted for publication!',
    date: 'November 9, 2023',
    category: 'Publications',
    categoryColor: 'bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200',
    link: '/research/publications#3d-particle-tracking',
  },
  {
    title: 'Fontan Circulation Support Device Grant Awarded',
    excerpt: 'Our proposal for "Mechanically Assisted Establishment of Biventricular Physiology for Failing Fontan Circulation" has been recommended for funding.',
    date: 'August 5, 2024',
    category: 'Grant',
    categoryColor: 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200',
    link: '/news/fontan-grant-2024',
  },
];

// Sort news items by date (newest first)
const sortedNewsItems = [...newsItems].sort((a, b) => {
  const dateA = new Date(a.date);
  const dateB = new Date(b.date);
  return dateB - dateA;
});

// Get the latest news items
const latestNews = sortedNewsItems.slice(0, count);
---

<WidgetWrapper id={id} isDark={isDark} containerClass={classes?.container as string} bg={bg}>
  <div class="max-w-4xl mx-auto text-center">
    {tagline && (
      <p class="text-base font-semibold tracking-wide text-primary-600 uppercase dark:text-primary-400">
        {tagline}
      </p>
    )}
    {title && (
      <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        {title}
      </h2>
    )}
    {subtitle && (
      <p class="mt-4 text-lg text-gray-600 dark:text-slate-400">
        {subtitle}
      </p>
    )}
  </div>

  <div class="mt-12 max-w-5xl mx-auto">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {latestNews.map((item) => (
        <a href={item.link} class="group flex flex-col h-full bg-white dark:bg-slate-900 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-300">
          <div class="p-6 flex flex-col flex-grow">
            <div class="flex items-center mb-4">
              <span class={`px-3 py-1 text-xs font-medium rounded-full ${item.categoryColor}`}>
                {item.category}
              </span>
              <span class="ml-auto text-sm text-gray-500 dark:text-gray-400">
                {item.date}
              </span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              {item.title}
            </h3>
            <p class="mt-2 text-gray-600 dark:text-slate-400 flex-grow">
              {item.excerpt}
            </p>
            <div class="mt-4 flex items-center text-primary-600 dark:text-primary-400 font-medium">
              Read more
              <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" />
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-10 text-center">
      <Button variant="primary" href="/news">
        View All News
      </Button>
    </div>
  </div>
</WidgetWrapper> 